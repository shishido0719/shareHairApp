<% provide(:title, "MyPage") %>

<article id="gbl_main">
	
	<header id="gbl_title" class="toppage">
		<div id="gbl_title_container" class="clearfix">
			
			<nav id="bread">
				<ol>
					<li><a href="/"><span>WEAR</span></a></li>
					<li><a href="/member/">マイページ</a></li>
					<li>コーディネート一覧</li>
				</ol>
			</nav>
	
			<div id="user_header" class="clearfix">
				
				<div id="user_sub">
					<div class="image">
						<p class="img">
							<% if @user.user_image? %>
								<%= image_tag @user.user_image.to_s ,size: '148x148'%>
							<% else %>
								<img src="//cdn.wimg.jp/content/no_image/profile/nu_80.gif" alt="ssd" width="148" height="148">
							<% end %>
						</p>
					</div>
					<div class="btn_follow">
						<p class="btn mypage"><%= link_to "プロフィール変更", edit_user_path(@user) %></p>
	        </div>
				</div>
				
				<div id="user_main">
					<section class="intro">
						<% flash.each do |message_type, message| %>
	        		<%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
	      		<% end %>
						<h1 class="name"><%= @user.name %></h1>
						<div class="meta clearfix">
							<ul class="info clearfix">
								<li><%= @user.user_id %></li>
								<li>MEN</li>
							</ul>
						</div>
					</section>
					<section class="profile">
						<p class="txt" data-moretxt="プロフィールをもっと見る" data-closetxt="閉じる"></p>
					</section>
				<!-- /#user_main --></div>
				
			<!-- /#user_header --></div>
			
		<!-- /#gbl_title_container --></div>
	<!-- /#gbl_title --></header>
	

	<div id="gbl_body_user_show" class="clearfix">
		
		<div id="user_menu">
			<nav class="clearfix">
				
				<div class="main">
					<ul class="clearfix">
						<li class="current"><a href="/member/" rel="nofollow"><%=@microposts.count %><span>コーディネート</span></a></li>
						<li><a href="/member/favorite/">3<span>お気に入り</span></a></li>
						<li><a href="/member/closet.html">2<span>クローゼット</span></a></li>
						<li><a href="/member/article.html" rel="nofollow">0<span>日記</span></a></li>
					</ul>
				</div>
				
				<div class="sub">
					<ul class="clearfix">
						<li><a href="/member/follower/">4<span>フォロワー</span></a></li>
						<li><a href="/member/follow/">23<span>フォロー</span></a></li>
					</ul>
				</div>
				
			<!-- /.clearfix --></nav>
		<!-- /#user_menu --></div>
	
		<div id="content">
			<p class="btn"><%= link_to "新規投稿する", new_micropost_path %></p>
				<div id="main_list">
					<ul class="list img_after_load clearfix">
						
						<% @microposts.each do |micropost| %>				
							<li class="like_mark" data-snapid="17174150">
								<p><%= micropost.content %></p>
								<div class="image">
									<a class="over" href="/genji/17174150/" style="background-image: none;">
										<p class="img"><%= link_to image_tag(micropost.image.to_s ,size: '200x200'),micropost_path(micropost)%></p>
										<p class="show_dt icon_font"><%= micropost.updated_at %></p>
									</a>
								</div>
								
								<div class="meta clearfix">
									<ul class="clearfix">
										<li class="save icon_font">
											<div class="btn_save fn_btn" data-savetype="coordinate" data-itemimageid="" data-saveid="17210935" data-elementid="" data-screenid="1" data-objectid="">
												<p class="btn "><a href="/member/login.html?bkurl=%2Ftakahashiai%2F" class="icon_font over"><span>55</span></a></p>
											</div>
										</li>
										<li id="like-btn-<%= micropost.id %>">
											<%= render 'likes/like', micropost: micropost %>
										</li>
									</ul>
								<!-- /.meta clearfix --></div>
							<!-- /.like_mark --></li>
						<% end %>
						
					<!-- /.list --></ul>
				<!-- /#main_list --></div>
			
			<div id="pager_container" class="clearfix">
				<div id="pager" class="clearfix">
					<p class="prev"><span class="icon_font">PREV</span></p>
					<ul class="clearfix">
						<li><strong>1</strong></li>
						<li><a href="/genji/?pageno=2">2</a></li>
						<li><a href="/genji/?pageno=3">3</a></li>
						<li><a href="/genji/?pageno=4">4</a></li>
						<li><a href="/genji/?pageno=5">5</a></li>
						<li class="doted">...</li>
						<li><a href="/genji/?pageno=27">27</a></li>
					</ul>
					<p class="next"><a href="/genji/?pageno=2" class="icon_font">NEXT</a></p>
				<!-- /#pager --></div>
			<!-- /#pager_container --></div>
			
			<div id="related_content">
				<div class="link_list tag">
					<h3 class="tit">げんじがよく使用するタグからコーディネートを探す</h3>
