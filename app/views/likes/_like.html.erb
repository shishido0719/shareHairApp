  <% if micropost.liked_by?(current_user) %>
    <p class="btn">
      <%= link_to(micropost_add_path(micropost), method: :delete, remote: true, class: "liked",id: :"like-btn-#{micropost.id}") do %>
        <i class="liked">いいね</i>
        <span class="liked"><%= micropost.likes.count %></span>
      <% end %>
    </p>
  <% else %>
    <p class="btn">
      <%= link_to(micropost_add_path(micropost), method: :post, remote: true, class: "not-liked",id: :"like-btn-#{micropost.id}") do %>
        <i class="not-liked">いいね</i>
        <span class="not-liked"><%= micropost.likes.count %></span>  
      <% end %>
    </p>       
  <% end %>
